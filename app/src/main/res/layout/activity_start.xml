<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/reltive"
        android:background="@color/colorFigma"
        tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="584dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/frontpage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:text="@string/heading"
        android:textColor="#FFFAFA"
        android:textSize="34dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/klaytn"
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/klaytnwhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/klaytn"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:text="Explore the World on NFT at Time "
        android:textColor="#FFFAFA"

        android:textSize="16dp" />
</RelativeLayout>